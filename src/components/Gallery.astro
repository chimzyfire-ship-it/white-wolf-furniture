---
import { galleryCategories } from '../data/siteData';
import CategoryGallery from './CategoryGallery';
---
<section id="gallery" class="py-14 sm:py-20 md:py-24 bg-[#030a13] min-h-[400px] sm:min-h-[600px] lg:min-h-screen">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="text-center mb-8 sm:mb-12 md:mb-16">
      <h2 class="text-accent text-[10px] sm:text-sm tracking-[.3em] sm:tracking-widest uppercase mb-1.5 sm:mb-2 font-semibold">Portfolio</h2>
      <h3 class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold">Carpentry <span class="text-accent">&</span> Projects</h3>
      <p class="text-gray-400 sm:text-gray-500 mt-3 sm:mt-4 max-w-2xl mx-auto uppercase text-[10px] sm:text-xs tracking-[.2em] sm:tracking-widest leading-relaxed">
        Browse our collections. Select a category to explore.
      </p>
    </div>

    <CategoryGallery categories={galleryCategories} client:load />
  </div>
</section>
