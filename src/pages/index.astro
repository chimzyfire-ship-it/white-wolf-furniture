---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Hero from '../components/Hero.astro';
import ProductList from '../components/ProductList.astro';
import Gallery from '../components/Gallery.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import QuoteModal from '../components/QuoteModal';
import BackToTop from '../components/BackToTop';
---

<Layout title="Artisanal Industrial Furniture">
	<Navbar client:load />
	<QuoteModal client:load />
	<BackToTop client:load />
	
	<main>
		<div class="reveal">
			<Hero />
		</div>
		<div class="reveal reveal-delay-200">
			<ProductList />
		</div>
		<div class="reveal">
			<Gallery />
		</div>
		<div class="reveal">
			<About />
		</div>
		<div class="reveal">
			<Contact />
		</div>
	</main>

	<footer class="glass-footer py-10 sm:py-12 text-center">
		<div class="container mx-auto px-6">
			<img src="/logo.png" alt="Logo" class="h-10 sm:h-12 mx-auto mb-5 sm:mb-6 opacity-50 grayscale hover:opacity-80 hover:grayscale-0 transition-all duration-700" />
			<div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 mb-4">
				<a href="mailto:Whitewolffurniture@gmail.com" class="text-gray-500 hover:text-accent text-[10px] sm:text-xs tracking-widest transition-colors">Whitewolffurniture@gmail.com</a>
				<span class="hidden sm:inline text-accent/20">|</span>
				<a href="tel:+2347051008570" class="text-gray-500 hover:text-accent text-[10px] sm:text-xs tracking-widest transition-colors">+234 705 100 8570</a>
			</div>
			<p class="text-[10px] sm:text-xs tracking-[.3em] sm:tracking-[.4em] uppercase text-gray-600">
				&copy; 2025 White Wolf Furniture. All Rights Reserved.
			</p>
			<p class="mt-3 sm:mt-4 text-[9px] sm:text-[10px] tracking-widest text-accent/20 uppercase">
				Crafted with Pride. Built to Last.
			</p>
		</div>
	</footer>
</Layout>
